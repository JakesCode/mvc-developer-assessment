@model NetC.JuniorDeveloperExam.Web.Models.Comment

<input type="hidden" id="replyingTo" name="ReplyingTo" value="-1" />
<div class="form-row" style="display: none" id="replyingToDiv">
    <p class="w-100">Replying to:</p><br />
    <div id="commentClone">
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        <label for="Name">Name</label>
        @Html.TextBoxFor(m => m.name, new { @placeholder = "Name", @name = "Name", @class = "form-control", @id="Name" })
    </div>
    <div class="form-group col-md-6">
        <label for="EmailAddress">Email Address</label>
        @Html.TextBoxFor(m => m.emailAddress, new { @placeholder = "Email Address", @name = "EmailAddress", @class = "form-control", @id="EmailAddress" })
    </div>
</div>

<div class="form-group">
    <label for="Message">Message</label>
    @Html.TextAreaFor(m => m.message, new { @rows="3", @name = "Message", @class = "form-control", @id="Message" })
</div>
<button type="submit" class="btn btn-primary">Submit</button>